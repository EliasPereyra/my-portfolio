---
import "@fontsource/quicksand";
import Heads from "@/components/Heads.astro";
import Footer from "@/components/sections/Footer.astro";
import Navbar from "@/components/sections/Navbar.astro";

export interface Props {
  title: string;
  author: string;
  description: string;
  articleDate?: Date;
}

const { title, author, description, articleDate } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <Heads title={title} author={author} description={description} />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --black-c-900: color-mix(
          in lch,
          hsl(221, 76%, 5%),
          hsl(120, 24%, 96%) 5%
        );
        --black-c-800: color-mix(
          in lch,
          hsl(221, 76%, 5%),
          hsl(120, 24%, 96%) 15%
        );

        --white-c-900: color-mix(
          in lch,
          hsl(120, 24%, 96%),
          hsl(221, 76%, 5%) 5%
        );
        --white-c-800: color-mix(
          in lch,
          hsl(120, 24%, 96%),
          hsl(221, 76%, 5%) 15%
        );

        --primary-color: var(--black-c-900);
        --secondary-color: hsl(160, 73%, 36%);
        --secondary-lighter__color: hsl(273, 88%, 68%);
        --blue-color: hsl(212, 100%, 70%);
        --white-color: var(--white-c-900);

        --dark-rb-gradient: linear-gradient(
          90deg,
          var(--primary-color) 0%,
          var(--secondary-color) 100%
        );
        --hero__dark-bg: linear-gradient(-200deg, #232243 -79%, #010613 90%);
      }

      @media (prefers-color-scheme: light) {
        :root {
          color: var(--white-c-800);
          --hero__light-bg: linear-gradient(
            169deg,
            #f9f8f8 -169.26%,
            #dbe5fc 144.3%
          );
        }

        :root.dark {
          --hero__dark-bg: linear-gradient(-200deg, #232243 -79%, #010613 90%);
          --primary-color: var(--black-c-900);
        }
      }

      /* CSS Reset */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      * {
        padding: 0;
        margin: 0;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        text-wrap: balance;
      }

      p {
        text-wrap: pretty;
        line-height: 1.7rem;
        font-size: clamp(1.12rem, 1.24rem + 0.14vw, 1.5rem);
      }

      html {
        scroll-behavior: smooth;
      }

      a {
        text-decoration: none;
      }

      html,
      body {
        position: relative;
        font-size: 100%;
        color-scheme: dark light;

        ::-webkit-scrollbar {
          width: 0.87rem;
        }

        ::-webkit-scrollbar-thumb {
          border: 4px solid transparent;
          background-clip: padding-box;
          border-radius: 9999px;
          background-color: #9797f7;
        }

        ::-webkit-scrollbar-track {
          box-shadow: inset 0 0 3.2rem #0e0e1b;
          cursor: pointer !important;
        }
      }

      button {
        border: none;
        background-color: transparent;
      }

      ul {
        padding: 0;
      }

      li {
        list-style: none;
      }

      h1 {
        font-family: "Quicksand", system-ui, sans-serif;
        font-weight: 800;
        font-size: clamp(1.9rem, 2.01rem + 1.39vw, 5rem);
      }

      h2 {
        font-family: "Quicksand", system-ui, sans-serif;
        font-size: clamp(1.4rem, 1.85rem + 1.39vw, 3rem);
        font-weight: 600;
      }

      h3 {
        font-family: "Quicksand", sans-serif;
        font-weight: 500;
        font-size: clamp(1.3rem, 1.55rem + 1.39vw, 2.5rem);
      }

      h4 {
        font-family: "Quicksand", sans-serif;
        font-size: clamp(1.25rem, 1.25rem + 1.39vw, 2.5rem);
        font-weight: 500;
      }

      img {
        display: block;
        max-width: 100%;
      }

      :is(p, a, li, small, button, label, input, textarea) {
        font-family: "Quicksand", sans-serif;
      }
    </style>
  </body>
</html>
