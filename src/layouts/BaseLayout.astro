---
import "@fontsource/quicksand";
import Heads from "@/components/Heads.astro";
import Footer from "@/components/sections/Footer.astro";
import Navbar from "@/components/sections/Navbar/Navbar.astro";
import UpArrowIcon from "@/components/atoms/UpArrowIcon.astro";

export interface Props {
  title: string;
  author: string;
  description: string;
  articleDate?: Date;
}

const { title, author, description, articleDate } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <Heads title={title} author={author} description={description} />
  </head>
  <body>
    <UpArrowIcon />
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      @import "src/styles/index.css";
    </style>
  </body>
</html>
