---
import CVButton from '../components/CV_Button.astro'
import '../styles/global.css'
---

<section>
  <div id="hero-content">
    <h1><span id="designer">Designer</span> <span id="upper-line">and</span> <br /><span id="developer">Developer</span></h1>
    <h3>
			I like to make designs and development that contribute satisfaction and happiness
      <!-- Me gusta hacer diseños y desarrollos que contribuyan satisfacción y contento -->
    </h3>
    <div id="btns-wrapper">
      <a id="btn-filled" href="#contact"><b>Let's get in touch</b></a>
			<CVButton />
    </div>
    <!-- <img src="" alt="una flecha va acá" /> -->
  </div>

  <div id="laptop-img">
    <img src="assets/laptop-ecommerce.webp" alt="A laptop showing an ecommerce page" />
  </div>
</section>

<style>
	:root {
		--bckg-gradient: linear-gradient(150deg, #F8F7FF 43.69%, rgba(249, 248, 255, 0) 99.28%);
	}

	section {
		display: flex;
		align-items: center;
		padding: 6em 0;
		background: var(--bckg-gradient);
	}
	

	#hero-content{
		padding: 0 4em;
		display: flex;
		flex-direction: column;
	}@media (max-width: 768px) {
		#hero-content {
			align-items: center;
			text-align: center;
		}
	}
	
	#laptop-img {
		margin-left: 2em;
	}@media (max-width: 768px) {
		#laptop-img {
			display: none;
		}
	}
	
	img {
		width: 21em;
	}

  h1 {
		font-size: 3.5rem;
		margin: 0;
		position: relative;
	}#designer {
		color: var(--orange);
	}
	#developer {
		color: var(--dark-green);
	}

	h3 {
		color: var(--light-dark);
		width: 52ch;
		font-weight: 400;
		font-size: 1.2rem;
		margin-top: .4em;
		margin-bottom: 1em;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}

	#btns-wrapper {
		display: flex;
		gap: .7em;
	}a {
    text-decoration: none;
		border-radius: 5px;
    font-size: 1rem;
    padding: .7em;
		text-align: center;
		width: 11em;
		transition: opacity .3s ease-in-out;
		border: 2px solid var(--dark-blue);
  }
	#btn-filled {
		background-color: var(--dark-blue);
		color: white;
	}#btn-filled:hover {
		opacity: .9;
	}
</style>
