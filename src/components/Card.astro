---
export interface Props {
	title: string;
	body: string;
	href: string;
}
const { live, title, body } = Astro.props;
---

<li class="link-card">
		<div id="link-card__wrapper">
			<div><img src="" alt="Imagen del proyecto" /></div>
			<div id="link-card__content">
				<h3>{title}</h3>
				<p id="link-card__content-body">{body}</p>
				<p>Aca van los tags</p>
				<hr />
				<p><a href={live}>https://livepage</a></p>
				<p><a href={live}>https://github.com/eliaspereyra/repositorio-x</a></p>
			</div>
		</div>
</li>
<style>
	:root {
		--link-gradient: linear-gradient(45deg, #4f39fa, #da62c4 30%, var(--color-border) 60%);
	}

	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15rem;
		background-image: var(--link-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		margin: 2em 0;
	}
	
	#link-card__wrapper {
		display: flex;
	}

	#link-card__content {
		padding: 1em;
	}

	#link-card__content-body {
		width: 50ch;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		border-radius: 0.35rem;
		color: var(--text-color);
		background-color: white;
		opacity: 0.8;
	}

	h3 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
	}

	h2 span {
		display: inline-block;
		transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: #4f39fa;
	}

	.link-card:is(:hover, :focus-within) h2 span {
		transform: translateX(2px);
	}
</style>
