---
export interface Props {
	title: string;
	desc: string;
	project_img: string;
	live_link: string;
	repo_link: string;
}
const { title, desc, project_img, live_link, repo_link } = Astro.props;
---

<li class="link-card">
		<div id="link-card__wrapper">
			<div id="img-container">
				<img src={project_img} alt={`${title} cover image`} />
			</div>
			<div id="link-card__content">
				<h3>{title}</h3>
				<p id="link-card__content-body">{desc}</p>
				<p>Aca van los tags</p>
				<hr />
				<p><a href={live_link}>{live_link}</a></p>
				<p><a href={repo_link}>{repo_link}</a></p>
			</div>
		</div>
</li>
<style>
	:root {
		--link-gradient: linear-gradient(90deg, #f5f3f3, #e6f0ff 30%, var(--color-border) 60%);
	}

	hr { border: none; height: 1px; background-color: gray;}

	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15rem;
		background-image: var(--link-gradient);
		background-size: 400%;
		border-radius: 5px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		margin: 2em 0;
		width: 50em;
	}
	
	#link-card__wrapper {
		display: flex;
	}

	#link-card__content {
		padding: 1em;
	}

	#link-card__content-body {
		width: 50ch;
		font-weight: 300;
		color: var(--light-dark)
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		border-radius: 0.35rem;
		color: var(--text-color);
		background-color: white;
		opacity: 0.8;
	}

	#img-container img {
		width: 20em;
		height: 100%;
	}

	h3 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
	}

	h2 span {
		display: inline-block;
		transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-card:is(:hover, :focus-within) h3 {
		color: #4f39fa;
	}

	.link-card:is(:hover, :focus-within) h2 span {
		transform: translateX(2px);
	}
</style>
