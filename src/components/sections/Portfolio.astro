---
import { t } from "i18next";

import Card from "../widgets/Card.astro";
import { projects } from "../../utils/Projects";
---

<main class="port-wrapper" id="portfolio-section">
  <div id="content">
    <h2>{t("portfolio.title")}</h2>
    <ul>
      {
        projects.map(({ title, tags, project_img, live_link, repo_link }) => (
          <Card
            title={title}
            tags={tags}
            img={project_img}
            live_link={live_link}
            repo_link={repo_link}
          />
        ))
      }
    </ul>
  </div>
</main>

<style>
  main {
    padding: 10em 10em;
    background: #060912;
    position: relative;

    @media screen and (max-width: 810px) {
      padding: 10em 1em;
    }

    &::before {
      content: "";
      background: radial-gradient(
        44.92% 43.13% at 44.74% 50.03%,
        rgba(30, 62, 104, 0.075) 0%,
        rgba(27, 65, 114, 0.096) 30%,
        rgba(7, 15, 28, 0) 100%
      );
      position: absolute;
      top: 0;
      left: 0;
      min-width: 100%;
      height: 100%;
      border-radius: 50%;
      z-index: 1;
      filter: blur(50px) drop-shadow(0 0 0.75rem #2d59d4fa) brightness(1.1)
        saturate(200%) opacity(0.22);
    }

    #content {
      h2 {
        text-align: center;
        color: #f2f7f2;
        font-size: 50px;
        margin-bottom: 3em;
      }

      ul {
        margin-inline: auto;
        max-width: 90em;
        color: hsl(233, 53%, 27%);
        display: grid;
        gap: 5em;
        justify-items: center;
        padding: 0;
      }
    }
  }

  @media (prefers-color-scheme: light) {
    main {
      background: linear-gradient(204deg, #e5e7ed -19.36%, #d0dfe6 222.58%);

      #content {
        h2 {
          color: var(--primary-color);
        }
      }
    }
  }
</style>
