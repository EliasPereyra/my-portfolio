---
import { Image } from "astro:assets";
import { t } from "i18next";

import ProfilePhoto from "@/assets/imgs/profile.webp";
---

<section id="about-section">
  <h2 id="about" class="about__title">{t("about.title")}</h2>
  <Image id="about__profile-photo" src={ProfilePhoto} alt="Foto de perfil" />
  <p class="about__description-text">
    {t("about.first-desc")}
  </p>
  <p class="about__description-text">
    {t("about.second-desc")}
    <a
      href="https://www.freecodecamp.org/espanol/news/author/elias-pereyra/"
      target="_blank">{t("about.third-desc")}</a
    >
  </p>

  <!-- Chore: Show last 3 translated articles from freeCodeCamp  -->
</section>

<style>
  #about-section {
    position: relative;
    padding: 14em 5rem;
    text-align: center;
    background: linear-gradient(
      -250deg,
      #1c1b44 -150%,
      #201d4d -120%,
      #010715 100%
    );

    .about__title {
      color: var(--white-c-900);
      margin-bottom: 1.8rem;
    }

    #about__profile-photo {
      margin-top: 0;
      width: 10em;
      height: 10em;
      object-fit: cover;
      border-radius: 50%;
      margin-inline: auto;
      border: 0.15rem solid var(--secondary-color);
    }

    .about__description-text {
      color: var(--white-c-800);
      font-size: 1.3rem;
      margin: 2em auto;
      line-height: 2.22rem;
      width: 30em;

      a {
        color: var(--white-gray__color);
        text-decoration: underline;
        transition: color 0.15s ease-in-out;
        &:hover {
          color: var(--secondary-lighter__color);
        }
      }
    }
  }

  @media screen and (max-width: 1000px) {
    #about-section {
      .about__description-text {
        width: 100%;
      }
    }
  }

  @media screen and (max-width: 600px) {
    #about-section {
      padding: 12em 2rem;
    }
  }

  @media (prefers-color-scheme: light) {
    #about-section {
      background: linear-gradient(
        143deg,
        #d6e3ea -227.71%,
        #c0d6e0 -109.44%,
        #eaebee 116.37%
      );

      :is(h2, p) {
        color: var(--primary-color);
      }
    }
  }
</style>
