---
import { t } from "i18next";
import LogoWhite from "../atoms/LogoWhite.astro";
import AstroIcon from "../atoms/AstroIcon.astro";
import LinkedinIcon from "../atoms/LinkedinIcon.astro";
import GithubIcon from "../atoms/GithubIcon.astro";
import XIcon from "../atoms/XIcon.astro";
---

<footer id="footer">
  <div class="footer__content">
    <div class="footer__social-wrapper">
      <a id="footer__my-logo" href="/">
        <LogoWhite width="143" height="143" /></a
      >
      <div class="footer__social-links">
        <GithubIcon width="27" height="27" />
        <LinkedinIcon
          width="27"
          height="27"
          href="https://linkedin.com/in/elias-pereyra-gomez"
        />
        <XIcon width="27" height="27" />
      </div>
    </div>
    <div id="footer__tool-used">
      <small>{t("footer.tool-used")}</small>
      <a href="https://astro.build" target="_blank"><AstroIcon /></a>
    </div>
  </div>
</footer>

<style>
  #footer {
    border-top: 0.2px solid hsl(225 33% 15% / 1);
    background: hsl(225 33% 6% / 1);
    padding: 4em 10em;
    container-type: inline-size;

    .footer__content {
      display: flex;
      justify-content: space-between;
      align-items: center;

      .footer__social-wrapper {
        display: flex;
        flex-direction: column;

        .footer__social-links {
          margin-top: -0.9rem;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 1rem;
        }
      }

      #footer__tool-used {
        display: flex;
        align-items: center;
        line-height: 9px;

        small {
          color: var(--white-color);
        }
      }
    }
  }

  @media screen and (max-width: 500px) {
    #footer {
      padding: 4em 2em;
    }
  }

  @container (max-width: 590px) {
    .footer__content {
      flex-direction: column;

      #footer__tool-used {
        flex-direction: column;
      }
    }
  }

  @media (prefers-color-scheme: light) {
    #footer {
      background: linear-gradient(
        9deg,
        #cadae2 6.27%,
        #f5f5f5 52.57%,
        #f5f5f5 88.98%
      );

      #footer__tool-used {
        small {
          color: var(--primary-color);
        }
      }
    }
  }
</style>
