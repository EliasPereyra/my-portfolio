---
import LogoPurple from "../atoms/LogoPurple.astro";
---

<nav> 
	<div>
		<a href="/"><LogoPurple /></a>
	</div>
	<ul id="navbar-items">
		<li><a href="#">Home</a></li>
		<li><a href="#about">About me</a></li>
		<li><a href="#portfolio">My Projects</a></li>
		<li><a href="#contact">Contact</a></li>
	</ul>
  
</nav>

<style>
  nav {
    width: calc(100% - 8em);
    position: absolute;
    padding: 1em 4em;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: transparent;
  }

  a {
    text-decoration: none;
    color: var(--light-dark);
    transition: opacity .2s ease-in-out, text-decoration .3s ease-in, transform .3s, text-decoration .2s ease-in;
    font-weight: 500;
  }a:hover {
    background-size: 100%;
    color: #242424;
    text-decoration: underline #142664;
    text-decoration-thickness: 3px;
  }

  ul { margin: 0; }
  li {
		list-style: none;
    font-size: .85rem;
	}

  #navbar-items {
    display: flex;
    align-items: center;
    gap: 1.9em;
  }
</style>
