---
import { t } from "i18next";
import Languages from "../atoms/Languages.astro";
import LogoWhite from "../atoms/LogoWhite.astro";
import ToggleTheme from "../atoms/ToggleTheme.astro";
---

<nav>
  <a href="/"><LogoWhite width="73" height="73" /></a>
  <ul id="navbar-items">
    <li><a href="/#">{t("navbar.home")}</a></li>
    <li><a href="/#about">{t("navbar.about")}</a></li>
    <li><a href="/#portfolio">{t("navbar.projects")}</a></li>
    <li><a href="/#contact">{t("navbar.contact")}</a></li>
  </ul>
  <div class="icons">
    <!-- <ToggleTheme /> -->
    <Languages />
  </div>
</nav>

<style>
  nav {
    background: transparent;
    display: flex;
    position: absolute;
    padding: 20px 80px;
    width: 100%;
    z-index: 10;
    justify-content: space-between;
    align-items: center;
    @media (max-width: 375px) {
      nav {
        padding: 1em 2em;
      }
    }

    a {
      text-decoration: none;
      color: var(--white-color);
      font-weight: 500;
    }

    @media (prefers-color-scheme: light) {
      a {
        color: var(--primary-color);
      }
    }

    ul {
      margin: 0;
      display: flex;
      align-items: center;
      gap: 1.9em;
      @media (max-width: 540px) {
        ul {
          display: none;
        }
      }

      li {
        list-style: none;
        font-size: 0.8rem;
        transition: text-decoration 1s ease-in-out;

        :hover {
          text-decoration: underline;
          text-underline-offset: 10px;
        }
      }
    }

    .icons {
      display: flex;
      gap: 10px;
      align-items: center;
    }
  }
</style>
