---
import { t } from "i18next";
import Form from "../widgets/Form.astro";
---

<section id="contact">
  <div class="contact__text-content">
    <h2 id="contact__title">{t("contact.title")}</h2>
    <p id="contact__message">{t("contact.comment")}</p>
  </div>
  <div id="contact__copy-wrapper">
    <button id="contact__copy-btn">Copy email</button>
  </div>
  <!-- <Form /> -->
</section>

<script>
  // @ts-nocheck
  import Toastify from "toastify-js";
  import "toastify-js/src/toastify.css";

  const copyBtn = document.querySelector("#contact__copy-btn");

  copyBtn?.addEventListener("click", () => {
    navigator.clipboard.writeText("eliaspereyra_gomez@hotmail.com");
    Toastify({
      text: "Email copied to the clipboard",
      className: "info",
      style: {
        background: "linear-gradient(to right, #0e0f1b, #0C0E22)",
        color: "white",
      },
    }).showToast();
  });
</script>

<style>
  #contact {
    padding: 14em 10em;
    background: #080a10;
    display: flex;
    gap: 1em;
    justify-content: center;
    align-items: center;
    position: relative;
    container-type: inline-size;

    .contact__text-content {
      display: flex;
      flex-direction: column;
      #contact__title {
        color: var(--white-c-900);
        font-size: 3.125rem;
        max-width: 23ch;
        line-height: 4rem;
      }

      #contact__message {
        margin: 1.8rem 0;
        color: var(--white-c-800);
        line-height: 2rem;
        width: 20em;
      }
    }

    #contact__copy-wrapper {
      color: var(--white-color);
      padding: 1em 2em;
      border-radius: 0.5rem;
      font-size: 1rem;
      border: 1px solid #5c5ba1;
      background: #0a0c10;
      box-shadow: 0px 0px 18px 8px #1b2d36;
      transition:
        border,
        box-shadow 0.2s ease-out;
      &:hover {
        box-shadow: 0px 0px 18px 8px #2d4b5a;
        border: 1px solid #6c48b9;
      }
    }
  }

  @media screen and (max-width: 1400px) {
    #contact {
      flex-direction: column;
    }
  }

  @media screen and (max-width: 600px) {
    #contact {
      padding: 12em 2em;

      .contact__text-content {
        #contact__message {
          width: 100%;
        }
      }
    }
  }

  @media (prefers-color-scheme: light) {
    #contact {
      background: #e4ecf1;

      .contact__text-content {
        #contact__title {
          color: var(--primary-color);
        }

        #contact__message {
          color: var(--primary-color);
        }
      }
    }
  }
</style>
