---
import DownArrow from "./DownArrow.astro";

---

<div id="dropdown">
  <button>
    <svg aria-hidden="true" width="35" height="35" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M5 14L5.90909 11.3333M11 14L9.90909 11.3333M9.90909 11.3333L7.72727 6L5.90909 11.3333M9.90909 11.3333H5.90909" stroke="#333333" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M13 11.8462H16.5M20 11.8462H18.25M16.5 11.8462V10M16.5 11.8462H17.375H18.25M18.25 11.8462C18.0556 13.2821 16.2667 17.0154 13 18M18.8333 18C17.6667 17.3846 14.6333 15.1692 14.1667 13.6923" stroke="#333333" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <DownArrow />
  </button>
  <ul id="dropdown-items">
    <li><a href="/">Spanish</a></li>
    <li><a href="/eng">English</a></li>
  </ul>
</div>

<style>
  a {
    text-decoration: none;
    color: black;
  }a:hover {
    color: rgb(109, 104, 104);
  }

  #dropdown {
    position: relative;
  }

  button {
    border: none;
    background: none;
    padding: auto;
    display: flex;
    align-items: center;
  }

  #dropdown-items {
    border-radius: 4px;
    display: none;
    width: 100%;
    padding: 7px;
    background: white;
    position: absolute;
    overflow: auto;
    text-align: center;
  }

  #dropdown:hover #dropdown-items {
    display: flex;
    flex-direction: column;
    gap: 7px;
  }
  
</style>
