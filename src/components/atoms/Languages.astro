---
import { Image } from "astro:assets";
import DownArrow from "./DownArrow.astro";
import LanguagesIcon from "./LanguagesIcon.astro";

import SpainFlagIcon from "@/assets/imgs/flag-of-spain.svg";
import GBFlagIcon from "@/assets/imgs/flag-of-gb.svg";
---

<div id="dropdown">
  <button aria-label="Languages button">
    <LanguagesIcon />
    <DownArrow />
  </button>
  <ul id="dropdown-items">
    <li>
      <a href="/"
        ><Image src={SpainFlagIcon} alt="The icon of a flag of Spain" /> Español</a
      >
    </li>
    <li>
      <a href="/eng"
        ><Image src={GBFlagIcon} alt="The icon of a flag of Great Britain" /> Inglés</a
      >
    </li>
  </ul>
</div>

<style>
  #dropdown {
    position: relative;

    &:hover #dropdown-items {
      padding: 0.8rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: start;
      gap: 1rem;
      border: 1px solid var(--blue-color);
    }

    button {
      border: none;
      background: none;
      padding: auto;
      display: flex;
      align-items: center;
      gap: 7px;
    }

    #dropdown-items {
      list-style: none;
      border-radius: 0.55rem;
      display: none;
      background: rgb(9 15 26);
      position: absolute;
      top: 1.7em;
      right: auto;
      overflow: hidden;
      width: 7em;

      li {
        margin-inline: auto;

        a {
          text-decoration: none;
          color: var(--white-color);
          transition: color 0.15s ease-in;
          display: flex;
          gap: 0.5rem;
          align-items: center;

          &:hover {
            color: var(--blue-color);
          }
        }
        img {
          width: 20px;
          height: 20px;
          margin: 0;
        }
      }
    }
  }
</style>
