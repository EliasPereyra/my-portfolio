---
import DownArrow from "./DownArrow.astro";
import LanguagesIcon from "./LanguagesIcon.astro";
---

<div id="dropdown">
  <button aria-label="Languages button">
    <LanguagesIcon />
    <DownArrow />
  </button>
  <ul id="dropdown-items">
    <li><a href="/">Español</a></li>
    <li><a href="/eng">Inglés</a></li>
  </ul>
</div>

<style>
  #dropdown {
    position: relative;

    &:hover #dropdown-items {
      padding: 1rem 1.2rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    button {
      border: none;
      background: none;
      padding: auto;
      display: flex;
      align-items: center;
      gap: 7px;
    }

    #dropdown-items {
      list-style: none;
      border-radius: 5px;
      display: none;
      padding: 1.2em;
      background: rgba(17, 17, 17, 0.432);
      position: absolute;
      top: 2.2em;
      right: auto;
      overflow: auto;
      text-align: center;
      font-size: 0.85rem;

      a {
        text-decoration: none;
        color: var(--white-color);
        transition: color .15s ease-in;
      }
      a:hover {
        color: rgba(209, 202, 202, 0.884);
      }
    }
  }
</style>
