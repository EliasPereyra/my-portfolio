---
import { changeLanguage } from "i18next";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import LeftArrowIcon from "@/components/atoms/LeftArrowIcon.astro";
import LinkedinIcon from "@/components/atoms/LinkedinIcon.astro";
import XIcon from "@/components/atoms/XIcon.astro";
import { createSlug } from "@/utils/createSlug";
import { getPosts } from "@/utils/posts";

changeLanguage("eng");

export async function getStaticPaths() {
    const posts = await getPosts();
    return posts.map((post) => ({
        params: { slug: createSlug(post.data.title) },
        props: post
    }));
}
const post = Astro.props;
const { title, description, tags } = post.data;
const { Content, remarkPluginFrontmatter } = await post.render();
---

<BaseLayout author="Elias Pereyra" title={title} description={description}>
  <section id="blog-post__section">
    <a href="/blog"><LeftArrowIcon color="#eee" /></a>
    <header id="blog-post__header">
      <h2 id="blog-post__title">{title}</h2>
      <small>{}</small>
      <ul id="blog-post__tag-items">
        {tags.map(tag => 
          <li><a href="#"><small>{tag}</small></a></li>)
        }
      </ul>
    </header>

    <article id="blog-post__content">     
        <Content />
    </article>

    <footer id="blog-post__footer-section">
      <h4 id="blog-post__footer-title">Share this with your friends</h4>
      <div id="blog-post__footer__share-links">
        <LinkedinIcon />
        <XIcon share_link="" />
      </div>
    </footer>
  </section>
</BaseLayout>

<style>
  #blog-post__section {
    background: linear-gradient(180deg, #010613 0%, #1B2D36 100%);
    padding: 12em 10em;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1em;

    :is(h2, h3, h4, p, code, small) {
      color: var(--white-color);
    }

    #blog-post__header {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 1rem;

      #blog-post__tag-items {
        display: flex;
        justify-content: center;
        gap: 1rem;

        small {
          transition: opacity .32s ease-in-out;
        
          &:hover {
            opacity: .7;
          }
        }
      }
    }

    #blog-post__content {
      padding: 0 10em;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      max-width: 70em;

      h3 {
        font-size: 2.2rem;
      }

      p {
        color: var(--white-gray__color);
          font-size: 1.2rem;
          max-width: 70ch;
          line-height: 2rem;
        }
        
        code {
          line-height: 1.7rem;
          font-family: "CommitMono";
        }
    }

    #blog-post__footer-section {
      margin-top: 1rem;
      padding: 1em;
      border-radius: .77rem;
      
      #blog-post__footer__share-links {
        margin-top: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
      }
    }
  }

  @media (prefers-color-scheme: light) {
    #blog-post__section {
      background: var(--hero__light-bg);
    }
  }
</style>